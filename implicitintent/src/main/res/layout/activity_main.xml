<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.liu.dave.implicitintent.MainActivity">

    <TextView
        android:id="@+id/phone_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/holo_red_light"
        android:padding="20dp"
        android:text="phone call" />

    <TextView
        android:id="@+id/map_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_call"
        android:layout_margin="10dp"
        android:background="@android:color/holo_red_light"
        android:padding="20dp"
        android:text="view map" />

    <TextView
        android:id="@+id/web_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_view"
        android:layout_margin="10dp"
        android:background="@android:color/holo_red_light"
        android:padding="20dp"
        android:text="view web" />

    <TextView
        android:id="@+id/send_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/web_view"
        android:layout_margin="10dp"
        android:background="@android:color/holo_red_light"
        android:padding="20dp"
        android:text="send email" />

    <TextView
        android:id="@+id/create_calendar_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_email"
        android:layout_margin="10dp"
        android:background="@android:color/holo_red_light"
        android:padding="20dp"
        android:text="create calendar event" />

    <TextView
        android:id="@+id/send_msg_multiple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_calendar_event"
        android:layout_margin="10dp"
        android:background="@android:color/holo_red_light"
        android:padding="20dp"
        android:text="send msg multiple" />

    <TextView
        android:id="@+id/get_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_msg_multiple"
        android:layout_margin="10dp"
        android:background="@android:color/holo_red_light"
        android:padding="20dp"
        android:text="get contact" />
</RelativeLayout>
